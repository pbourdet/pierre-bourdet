default:
    suites:
        default:
            contexts:
                - Tests\Behat\DemoContext

    extensions:
        Behatch\Extension: ~
        FriendsOfBehat\SymfonyExtension:
            kernel:
                class: App\Kernel
                path: src/Kernel.php
                environment: test
                debug: false
            bootstrap: tests/bootstrap.php
        Behat\MinkExtension:
            base_url: 'https://localhost/'
            default_session: symfony
            sessions:
                symfony:
                    symfony: ~
